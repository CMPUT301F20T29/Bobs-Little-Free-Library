<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:padding="11dp"
    tools:context=".views.templates.BlankTemplateActivity">

    <!--        Top buttons begin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/back_button"
                style="@style/BackButton"
                android:text="Back" />

            <Button
                android:id="@+id/edit_button"
                style="@style/SecondaryButton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Edit" />
        </RelativeLayout>

        <View android:id="@+id/profile_divider0"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="?android:attr/dividerVertical" />
        <!--        Top buttons end-->

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            style="@style/ViewTitle"
            android:text="Lee Sin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_email"
            android:gravity="center"
            android:text="morello@riot.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_address"
            android:gravity="center"
            android:text="Summoner's Rift, California" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:gravity="center"
            android:text="(Optional) Phone Number" />


        <View android:id="@+id/profile_divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="?android:attr/dividerVertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio"
            android:gravity="center"
            android:text="Add bio by pressing EDIT button"
            style="@style/FormLabel"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>