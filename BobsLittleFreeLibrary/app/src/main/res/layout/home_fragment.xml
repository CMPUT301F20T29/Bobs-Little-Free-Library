<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="11dp">

    <!-- Top buttons -->
    <Button
        android:id="@+id/home_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textSize="20sp"
        android:padding="8dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/home_user_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/user_icon"
        android:drawableStart="@drawable/user_icon"
        android:padding="8dp"
        android:text="Name"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark" />

    <View android:id="@+id/home_divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/home_user_profile_button"
        android:layout_marginTop="20dp"
        android:background="?android:attr/dividerVertical" />

    <!-- Latest Books starts here -->
    <TextView
        android:id="@+id/latest_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_below="@+id/home_search_button"
        android:text="@string/latest_books"
        android:textColor="@color/colorPrimaryDark"/>

    <TableLayout
        android:id="@+id/latest_books_view"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/latest_text"
        android:layout_marginHorizontal="40dp">
        <!-- 1st row starts -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/home_imageButton1"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/home_imageButton2"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/home_imageButton3"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
        </TableRow>
        <!-- 2nd row starts -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/home_imageButton4"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/home_imageButton5"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/home_imageButton6"
                android:layout_width="100dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="fitCenter"/>
        </TableRow>
    </TableLayout>


    <View android:id="@+id/home_divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/latest_books_view"
        android:layout_marginTop="10dp"
        android:background="?android:attr/dividerVertical" />

    <!-- Request Overview starts here -->
    <TextView
        android:id="@+id/requests_overview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_below="@+id/latest_books_view"
        android:text="@string/requests_overview"
        android:textColor="@color/colorPrimaryDark"/>

    <TableLayout
        android:id="@+id/requests_overview_display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_below="@+id/requests_overview_text">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/requests_inbound_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/requests_outbound_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/requests_inbound_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Inbound" />
            <Button
                android:id="@+id/requests_outbound_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Outbound" />
        </TableRow>
    </TableLayout>

    <View android:id="@+id/home_divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/requests_overview_display"
        android:layout_marginTop="10dp"
        android:background="?android:attr/dividerVertical" />

    <!-- Quick Scan Button -->
    <Button
        android:id="@+id/home_quick_scan_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="@string/quick_scan"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"/>
</RelativeLayout>