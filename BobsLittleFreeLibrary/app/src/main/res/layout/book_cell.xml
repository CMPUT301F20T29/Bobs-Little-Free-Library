<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="11dp">

        <ImageView
            android:id="@+id/bookSearchImage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:src="@drawable/blue_book"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bookSearchName"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/name_text"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="0dp"
                android:padding="0dp"
                app:autoSizeMaxTextSize="30dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="uniform"></TextView>

            <TextView
                android:id="@+id/bookSearchAuthor"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="0dp"
                android:paddingLeft="0dp"
                app:autoSizeMaxTextSize="24dp"
                app:autoSizeMinTextSize="5dp"
                app:autoSizeTextType="uniform"></TextView>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>