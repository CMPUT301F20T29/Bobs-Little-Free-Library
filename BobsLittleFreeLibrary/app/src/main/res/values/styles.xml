<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawableLeft">@drawable/back_button_icon</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RightCornerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ProfileButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableRight">@drawable/user_icon</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SubmitButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="FormInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:ems">10</item>-->
    </style>

    <style name="ViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/title_font</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FormLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="titleTextStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:background">@color/colorNegative</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:background">@color/colorPositive</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>