<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookSearchImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/blue_book"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/bookSearchImage"
            android:layout_centerVertical="true"
            >


            <TextView
                android:id="@+id/bookSearchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="26sp"
                app:autoSizeTextType="uniform"
                android:text="The Way of kings"

                />


            <TextView
                android:id="@+id/bookSearchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:paddingBottom="3dp"
                android:text="Available" />


            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:layout_alignParentRight="true"
                android:text="Owned by mrl"
                android:paddingRight="10dp"/>





        </LinearLayout>

    </RelativeLayout>

</LinearLayout>