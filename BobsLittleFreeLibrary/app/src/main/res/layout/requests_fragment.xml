<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/requests_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/filterAllButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:text="ALL"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/filterNotAcceptedButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@id/filterAllButton"
            android:textSize="10dp"
            android:text="NOT ACCEPTED"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/filterAcceptedButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@id/filterNotAcceptedButton"
            android:textSize="10dp"
            android:text="ACCEPTED"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/filterExchangedButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@id/filterAcceptedButton"
            android:textSize="8dp"
            android:text="BORROWED"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/filterReturnButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/filterExchangedButton"
            android:textSize="10dp"
            android:layout_gravity="center_vertical"
            android:text="RETURNS" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:background="?android:attr/dividerVertical"
        android:layout_alignParentLeft="true" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        />

    <ListView
        android:id="@+id/requests_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs"/>

</RelativeLayout>